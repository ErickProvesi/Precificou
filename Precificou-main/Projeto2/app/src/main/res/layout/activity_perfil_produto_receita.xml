<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#222222"
    android:layout_gravity="center"
    tools:context=".perfil_produto_receita">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgProductPhoto"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/img_product_photo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtProductName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:drawableRight="@drawable/edit_icon"
                android:fontFamily="@font/poppinsbold"
                android:gravity="left"
                android:text="Nome do Produto"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <View
                android:layout_width="200dp"
                android:layout_height="2dp"
                android:layout_marginStart="10dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/txtProfitMargin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppinsbold"
                android:gravity="center"
                android:text="Margem de Lucro"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnUnitOrTotal"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:drawableRight="@drawable/ic_twotone_arrow_drop_down_24"
                    android:fontFamily="@font/poppinsbold"
                    android:backgroundTint="@color/btnYellow"
                    android:gravity="center"
                    android:text="Unitário"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    />

                <TextView
                    android:id="@+id/txtUnitOrTotalResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/poppinsbold"
                    android:gravity="center"
                    android:text="R$ 0,00"
                    android:textAlignment="center"
                    android:textColor="#FFE20D"
                    android:textSize="14dp" />


                />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardProduct"
        android:layout_width="match_parent"
        android:layout_height="573dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#363636"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnIncome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@color/screenBackground"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Receita"
                    android:textAllCaps="false"
                    android:textColor="#FFE20D"
                    android:textSize="14dp"
                    />

                <Button
                    android:id="@+id/btnDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@drawable/button_details"
                    android:fontFamily="@font/poppinsbold"
                    android:textColor="@color/white"
                    android:text="Detalhes"
                    android:textAllCaps="false"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtIngredients"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="40dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppinsbold"
                    android:gravity="left"
                    android:text="Ingredientes"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/imgAddIngredient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="200dp"
                    android:layout_marginEnd="40dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_baseline_add_24" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtIngr1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="60dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppinsbold"
                    android:gravity="left"
                    android:text="Ovo"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txtValueIngr1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="140dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppinsbold"
                    android:gravity="left"
                    android:text="R$ 0,00"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtOtherCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="40dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppinsbold"
                    android:gravity="left"
                    android:text="Outros Custos"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/imgAddOtherCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="200dp"
                    android:layout_marginEnd="40dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_baseline_add_24" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtOtherCost1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="60dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppinsbold"
                    android:gravity="left"
                    android:text="Luz"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txtValueOC1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="140dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppinsbold"
                    android:gravity="left"
                    android:text="R$ 0,00"
                    android:textColor="@color/white"
                    android:textSize="14dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="180dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppinsbold"
                android:text="Descrição"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txtDescriptionSquare"
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/img_product_photo"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/black"
                android:textSize="12dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>