<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tela_cadastro"
    tools:context=".Cadastro">

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="163dp"
        android:layout_height="39dp"
        android:layout_marginBottom="156dp"
        android:background="@drawable/custom_button"
        android:backgroundTint="#FEE101"
        android:drawableTint="#FEE101"
        android:fontFamily="@font/poppinsbold"
        android:letterSpacing="0.3"
        android:lineSpacingExtra="0sp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="Cadastrar"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        app:iconTint="#FEE101"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/pgbRegister"
        style="?android:attr/progressBarStyle"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginBottom="156dp"
        android:indeterminateTint="#FEE101"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.216"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edtNameRegister"
        android:paddingLeft="10dp"
        android:layout_width="298dp"
        android:layout_height="43dp"
        android:layout_marginBottom="436dp"
        android:background="@drawable/custom_edit_text"
        android:ems="10"
        android:fontFamily="@font/poppinsmedium"
        android:hint="Nome"
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        android:textColor="#BF000000"
        android:textColorHint="#969696"
        android:textDirection="firstStrongLtr"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edtPasswordRegister"
        android:layout_width="298dp"
        android:layout_height="43dp"
        android:paddingLeft="10dp"
        android:layout_marginBottom="304dp"
        android:background="@drawable/custom_edit_text"
        android:ems="10"
        android:fontFamily="@font/poppinsmedium"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColor="#BF000000"
        android:textColorHint="#969696"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/edtEmailRegister"
        android:layout_width="298dp"
        android:layout_height="43dp"
        android:paddingLeft="10dp"
        android:layout_marginBottom="372dp"
        android:background="@drawable/custom_edit_text"
        android:ems="10"
        android:fontFamily="@font/poppinsmedium"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColor="#BF000000"
        android:textColorHint="#969696"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edtConfirmPassword"
        android:layout_width="298dp"
        android:layout_height="43dp"
        android:layout_marginBottom="236dp"
        android:background="@drawable/custom_edit_text"
        android:paddingLeft="10dp"
        android:ems="10"
        android:fontFamily="@font/poppinsmedium"
        android:hint="Confirmar Senha"
        android:inputType="textPassword"
        android:textColor="#BF000000"
        android:textColorHint="#969696"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/imgProfileRegister"
        android:layout_width="187dp"
        android:layout_height="189dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/pic_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="34dp"
        android:layout_height="17dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.020"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/seta" />

    <ImageView
        android:id="@+id/imgEyeRegister"
        android:layout_width="34dp"
        android:layout_height="18dp"
        android:layout_marginBottom="316dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.86"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/vetorolhofechado" />

    <ImageView
        android:id="@+id/imgEyeRegister2"
        android:layout_width="34dp"
        android:layout_height="18dp"
        android:layout_marginBottom="248dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.86"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/vetorolhofechado" />

    <ImageView
        android:id="@+id/imgEmailRegister"
        android:layout_width="34dp"
        android:layout_height="18dp"
        android:layout_marginBottom="384dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.86"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/vetoremail" />

    <ImageView
        android:id="@+id/imgUserRegister"
        android:layout_width="34dp"
        android:layout_height="18dp"
        android:layout_marginBottom="448dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.86"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/vetorusuario" />

</androidx.constraintlayout.widget.ConstraintLayout>