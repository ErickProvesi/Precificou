<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    android:clickable="true"
    tools:context=".FragmentoPerfil">

    <TextView
        android:id="@+id/txtProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppinsextrabold"
        android:letterSpacing="0.2"
        android:text="Perfil"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viwProfileBackground"
        android:layout_width="fill_parent"
        android:layout_height="650dp"
        android:background="@drawable/view_products"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imgEditPic"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginTop="292dp"
        android:src="@drawable/imgedit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.341"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnExitAccount"
        android:layout_width="360dp"
        android:layout_height="45dp"
        android:layout_marginTop="622dp"
        android:background="@drawable/custom_button_profile"
        android:fontFamily="@font/poppinsbold"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingTop="13dp"
        android:text="Sair"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgProfilePic"
        android:layout_width="145dp"
        android:layout_height="143dp"
        android:layout_marginTop="170dp"
        android:background="@drawable/pic_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtEmailProfile"
        android:layout_width="220dp"
        android:layout_height="33dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/custom_text_profile"
        android:fontFamily="@font/poppinsbold"
        android:paddingRight="5dp"
        android:text="E-mail Usuario"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.963"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAccountSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="370dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Configurações da Conta"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnEditEmail"
        android:layout_width="360dp"
        android:layout_height="45dp"
        android:layout_marginTop="422dp"
        android:background="@drawable/custom_button_profile"
        android:fontFamily="@font/poppinsbold"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingTop="13dp"
        android:text="Alterar E-mail"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnEditPassword"
        android:layout_width="360dp"
        android:layout_height="45dp"
        android:layout_marginTop="486dp"
        android:background="@drawable/custom_button_profile"
        android:fontFamily="@font/poppinsbold"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingTop="13dp"
        android:text="Alterar Senha"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDeleteAccount"
        android:layout_width="360dp"
        android:layout_height="45dp"
        android:layout_marginTop="553dp"
        android:background="@drawable/custom_button_profile"
        android:fontFamily="@font/poppinsbold"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingTop="13dp"
        android:text="Excluir Conta"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtProfileName"
        android:layout_width="220dp"
        android:layout_height="33dp"
        android:layout_marginTop="207dp"
        android:background="@drawable/custom_text_profile"
        android:ems="10"
        android:paddingRight="2dp"
        android:fontFamily="@font/poppinsbold"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.963"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgProfileCheck"
        android:layout_width="24dp"
        android:layout_height="23dp"
        android:layout_marginTop="212dp"
        android:src="@drawable/imgcheck"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgEditName"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginTop="214dp"
        android:src="@drawable/imgedit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>