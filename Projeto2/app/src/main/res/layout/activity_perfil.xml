<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    tools:context=".Perfil">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppinsextrabold"
        android:letterSpacing="0.2"
        android:text="Perfil"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viwProfileBackground"
        android:layout_width="fill_parent"
        android:layout_height="650dp"
        android:background="@drawable/view_products"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="82dp" />

    <Button
        android:id="@+id/btnQuitAccount"
        android:layout_width="375dp"
        android:layout_height="50dp"
        android:layout_marginTop="552dp"
        android:backgroundTint="#6B6B6B"
        android:drawableRight="@drawable/right_arrow"
        android:fontFamily="@font/poppinsbold"
        android:gravity="left"
        android:paddingTop="9dp"
        android:text="Sair"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgProfilePic"
        android:layout_width="145dp"
        android:layout_height="143dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pic_circle" />

    <TextView
        android:id="@+id/txtNameProfile"
        android:layout_width="220dp"
        android:layout_height="33dp"
        android:layout_marginTop="136dp"
        android:background="@drawable/custom_text_profile"
        android:drawableRight="@drawable/edit_icon"
        android:fontFamily="@font/poppinsbold"
        android:paddingRight="5dp"
        android:text="Nome Usuario"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.963"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtEmailProfile"
        android:layout_width="220dp"
        android:layout_height="33dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/custom_text_profile"
        android:drawableRight="@drawable/edit_icon"
        android:fontFamily="@font/poppinsbold"
        android:paddingRight="5dp"
        android:text="E-mail Usuario"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.963"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAccountSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Configurações da Conta"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnModifyEmail"
        android:layout_width="375dp"
        android:layout_height="50dp"
        android:layout_marginTop="352dp"
        android:backgroundTint="#6B6B6B"
        android:drawableRight="@drawable/right_arrow"
        android:fontFamily="@font/poppinsbold"
        android:gravity="left"
        android:paddingTop="9dp"
        android:text="Alterar E-mail"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnModifyPassword"
        android:layout_width="375dp"
        android:layout_height="50dp"
        android:layout_marginTop="416dp"
        android:backgroundTint="#6B6B6B"
        android:drawableRight="@drawable/right_arrow"
        android:fontFamily="@font/poppinsbold"
        android:gravity="left"
        android:paddingTop="9dp"
        android:text="Alterar Senha"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDeleteAccount"
        android:layout_width="375dp"
        android:layout_height="50dp"
        android:layout_marginTop="483dp"
        android:backgroundTint="#6B6B6B"
        android:drawableRight="@drawable/right_arrow"
        android:fontFamily="@font/poppinsbold"
        android:gravity="left"
        android:paddingTop="9dp"
        android:text="Excluir Conta"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgModifyPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="224dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.343"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/edit_icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>